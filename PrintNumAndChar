public class PrintNumAndChar {


    public static void main(String[] args)
    {
        Object obj=new Object();
        PrintNum pn=new PrintNum(obj);
        PrintChar pc=new PrintChar(obj);
        new Thread(pn).start();
        new Thread(pc).start();
    }
}

class PrintNum implements Runnable {
    private Object obj;

    public PrintNum(Object obj) {
        this.obj = obj;
    }
    @Override
    public void run(){
        synchronized (obj) {
            for (int i = 1; i < 53; i++) {
                System.out.print(i);
                if (i % 2 == 0) {
                    obj.notifyAll();

                    try {
                        obj.wait();
                    } catch (InterruptedException ex) {
                        ex.printStackTrace();
                    }
                }
            }
        }
    }
}

class PrintChar implements Runnable{
    private Object obj;
    public PrintChar(Object obj)
    {
        this.obj=obj;
    }
    @Override
    public void run(){
        synchronized (obj) {
            for (int i = 0; i <= 26; i++) {
                System.out.print((char)(i+'A'));
                obj.notifyAll();

                try {
                    obj.wait();
                } catch (InterruptedException ex) {
                    ex.printStackTrace();
                }
            }
        }

    }
}

